<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:SOCCERPAGEX.Models"
             x:Class="SOCCERPAGEX.Pages.LigaPage">

    <ContentPage.Content>
        <!-- Mostrar solo los clubes de la liga seleccionada -->
        <CollectionView ItemsSource="{Binding Ligas}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Nombre}" FontSize="20" FontAttributes="Bold" />

                        
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
